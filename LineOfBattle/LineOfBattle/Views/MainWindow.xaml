<Window x:Class="LineOfBattle.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:LineOfBattle.Views"
        xmlns:vm="clr-namespace:LineOfBattle.ViewModels"
        xmlns:sl="clr-namespace:ShootighLibrary;assembly=ShootighLibrary"
        mc:Ignorable="d"
        Title="Line of Battle"
        d:DesignWidth="640"
        d:DesignHeight="480"
        >
    
    <Window.DataContext>
        <vm:UIViewModel />
    </Window.DataContext>

    <Grid>
        <sl:GameControl x:Name="Graphics" Panel.ZIndex="-100" />
        <ContentControl x:Name="UI" Content="{Binding SceneViewModel}" />
    </Grid>
</Window>
