<Window x:Class="LineOfBattle.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sl="clr-namespace:ShootighLibrary;assembly=ShootighLibrary"
        mc:Ignorable="d"
        Title="Line of Battle"
        d:DesignWidth="640"
        d:DesignHeight="480"
        >
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/SceneUITemplateResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <ContentControl x:Name="UI" Content="{Binding SceneUIViewModel.Value}" Panel.ZIndex="1">
            <ContentControl.Resources>
            </ContentControl.Resources>
        </ContentControl>
        
        <sl:GameControl x:Name="Graphics" Panel.ZIndex="-1" />
    </Grid>
</Window>
